<%- include("./partials/header") %>

<div class="row">
	<div class="col-md-12">
		<form class="form-signin" action="/forgot" method="POST">
			<legend>Forgot Password</legend>
			<div class="form-group">
				<label class="sr-only" for="email">Email</label>
				<input type="email" name="email" id="email" autofocus class="form-control" placeholder="example@mail.com" required>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-lg btn-primary btn-block" value="Reset Password">
			</div>
		</form>
	</div>
</div>

<%- include("./partials/footer") %>