<%- include("../partials/header") %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center m-4">
		<h1>Create a new campground</h1>		
	</div>
	<div class="col-xs-8 col-md-6 col-lg-4">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="name" id="name" placeholder="Awesome campground" required> 
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input class="form-control" type="number" name="price" id="price" placeholder="15.50" min="0.0" step="0.01"> 
			</div>
			<div class="form-group">
				<label for="image">Image Url</label>
				<input class="form-control" type="text" name="image" id="image" placeholder="Image URL">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="description" id="description" placeholder="This is a campground">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>		
		<a href="/campgrounds">Go back</a>		
	</div>
</div>

<%- include("../partials/footer") %>