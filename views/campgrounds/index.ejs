<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp<img src="https://img.icons8.com/plasticine/100/000000/rv-campground.png"></h1>
		<p>View our hand-picked	campgrounds from all over the world</p>
		<p>
			<a class="btn btn-primary btn-lg" href="campgrounds/new">Add new campground</a>
		</p>
	</div>			
</header>

<div class="row text-center">
	<!-- Search  -->
	<div class="col-md-12">
		<% if(noMatch !== undefined){ %>
		<h3><%= noMatch %></h3>
		<div class="row">
			<div class="col-md-12 m-4">
				<form action="/campgrounds" method="GET" class="form-inline justify-content-center">
					<div class="form-group">
						<input type="text" name="search" placeholder="Campground search..." class="form-control">
						<input type="submit" value="Search" class="btn btn-default">
					</div>
				</form>	
			</div>
		</div>
		<% } %>
	</div>

	<!-- Shown campgrounds -->
	<% campgrounds.forEach(function(campground){ %>
	<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
		<div class="card">
			<img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
			<div class="card-body">
				<h5><%= campground.name %></h5>
				<% if (campground.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="far fa-star checked<% if (campground.rating > 0.25 && campground.rating <= 0.75) { %> fas fa-star-half-alt checked <% } %> <% if(campground.rating > 0.75) { %> fas fa-star checked <% } %>"></span>
                    <span class="far fa-star checked<% if (campground.rating > 1.25 && campground.rating <= 1.75) { %> fas fa-star-half-alt checked <% } %> <% if(campground.rating > 1.75) { %> fas fa-star checked <% } %>"></span>
                    <span class="far fa-star checked<% if (campground.rating > 2.25 && campground.rating <= 2.75) { %> fas fa-star-half-alt checked <% } %> <% if(campground.rating > 2.75) { %> fas fa-star checked <% } %>"></span>
                    <span class="far fa-star checked<% if (campground.rating > 3.25 && campground.rating <= 3.75) { %> fas fa-star-half-alt checked <% } %> <% if(campground.rating > 3.75) { %> fas fa-star checked <% } %>"></span>
                    <span class="far fa-star checked<% if (campground.rating > 4.25 && campground.rating <= 4.75) { %> fas fa-star-half-alt checked <% } %> <% if(campground.rating > 4.75) { %> fas fa-star checked <% } %>"></span>
                    <% } %>
			<div>
           			<span class="badge label-primary mb-2"><i class="far fa-thumbs-up fa-lg"></i> <%= campground.likes.length %></span>
       			</div>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
			</div>
		</div>
	</div>
	<% }) %>
</div>

<a href="/">Back to homepage</a>

<%- include("../partials/footer") %>